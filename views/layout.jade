doctype html
html
    head
        title User Management

        link(rel='stylesheet', href='/bootstrap-3.3.4-dist/css/bootstrap.min.css')
        link(rel='stylesheet', href='/stylesheets/style.css')

        script(src='/javascripts/jquery-2.1.4.min.js')
        script(src='/bootstrap-3.3.4-dist/js/bootstrap.min.js')
    body
        nav.navbar.navbar-inverse.navbar-fixed-top
            .container-fluid
                .navbar-header
                    button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href='#') Task Manager
                #navbar.navbar-collapse.collapse
                    ul.nav.navbar-nav.navbar-right
                        li
                            if currentUser
                                a(href='/logout') Logout
                            else if tab != 'login'
                                a(href='/login') Login


        .container
            .row
                if currentUser
                    .col-sm-3.col-md-2.sidebar
                        .sidebar-nav
                            div(class='navbar navbar-default', role='navigation')
                                .navbar-header
                                    button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#sidebar-nav', aria-expanded='false', aria-controls='navbar')
                                        span.sr-only Toggle navigation
                                        span.icon-bar
                                        span.icon-bar
                                        span.icon-bar
                                    span.visible-xs.navbar-brand Menu
                                #sidebar-nav.navbar-collapse.collapse.sidebar-navbar-collapse
                                    ul.nav.navbar-nav
                                        li(class=(tab === "users")? 'active' : '')
                                            a(href='/users/') Users
                                        li(class=(tab === "groups")? 'active' : '')
                                            a(href='#') Groups
                .col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
                    block content